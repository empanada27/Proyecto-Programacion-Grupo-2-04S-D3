#include<stdio.h>
int main () {

    int notas_estudiantes[5];
    int media=0,j=0;
    int max,min;

    printf("ingrese las notas de los estudiantes\n");

    for (int i=0; i<5; i++) {
    	printf("Ingrese nota del estudiante %d",1+i);

        scanf("%d",&notas_estudiantes[i]);
        j=j+notas_estudiantes[i];

    


    printf("Las notas de los estudiantes son:");

    for(int i=0; i<5; i++) {

        printf("%d\n",notas_estudiantes[i]);

    }


    media=j/5;

    printf("El promedio es de %d\n",media);

    max=notas_estudiantes[0];
    min=notas_estudiantes[0];

    for (int i=0; i<5; i++){
    if ( notas_estudiantes[i]>max) {
        max=notas_estudiantes[i];
    }
    if (notas_estudiantes[i]<min) {
        min=notas_estudiantes[i];
    }
     }
   printf("La nota maxima es: %d\n La nota mÃ­nima es: %d ",max,min);


